{
  "name": "ssh-terminal-site",
  "version": "0.0.1",
  "description": "SSH-accessible terminal personal website",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "test": "bun test",
    "generate-key": "ssh-keygen -t ed25519 -f host.key -N ''"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/bun": "latest",
    "@types/ssh2": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
